<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/imv_file_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imv_file_icon"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/imv_file_icon"
        android:textSize="24sp"
        android:layout_toStartOf="@id/imv_forward"
        android:text="Android"/>

    <TextView
        android:id="@+id/tv_file_size"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_file_name"
        android:layout_below="@+id/tv_file_name"
        android:textSize="7sp"
        android:text="8384MB"/>

    <TextView
        android:id="@+id/tv_file_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_file_name"
        android:layout_toRightOf="@+id/tv_file_size"
        android:textSize="7sp"
        android:text="34/67/1009"/>

    <ImageView
        android:id="@+id/imv_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_forward"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"/>
</RelativeLayout>